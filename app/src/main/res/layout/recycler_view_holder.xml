<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/small"
    android:focusable="true"
    android:clickable="true"
    android:layout_marginBottom="@dimen/small"
    android:layout_marginRight="@dimen/small">
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:elevation="3dp"
        android:clickable="true"
        card_view:cardUseCompatPadding="true"
        android:layout_height="wrap_content"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/small"
            android:paddingTop="@dimen/small"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimary"
                android:id="@+id/title"
                android:layout_marginTop="@dimen/small"
                android:textSize="18sp"
                android:text="Mrs. Shasmita Roy Teacher"
                android:layout_alignParentTop="true"
                android:layout_alignLeft="@+id/textView"
                android:layout_alignStart="@+id/textView" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/small"
                android:textSize="10sp"
                android:text="09th March 2016, 11:00 am"
                android:id="@+id/textView"
                android:textColor="@color/black"
                android:layout_below="@+id/title"
                android:layout_toRightOf="@+id/profile_image"
                android:layout_toEndOf="@+id/profile_image" />

            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_image"
                android:layout_marginTop="@dimen/tiny"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/profile"
                app:civ_border_width="2dp"
                app:civ_border_color="@color/colorGray"/>
            <ImageButton
                android:layout_width="30dp"
                android:background="@color/colorWhite"
                android:src="@drawable/overflow"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:id="@+id/menu_btton"
                android:layout_alignTop="@+id/title"
                android:layout_alignRight="@+id/divider"
                android:layout_alignEnd="@+id/divider" />
            <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="@dimen/small"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:layout_marginRight="@dimen/large"
                android:layout_marginLeft="@dimen/large"
                android:layout_below="@+id/profile_image"
                android:id="@+id/content"
                android:text="@string/request_to_all_parents_please_submit_your_adhaar_card"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/content"
                android:textColor="@color/black"
                android:id="@+id/deadline"
                android:layout_marginTop="@dimen/small"
                android:layout_marginLeft="@dimen/large"
                android:text="Deadline: 11th March 2016, 4:00 pm"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All Classes"
                android:textStyle="bold"
                android:textColor="@color/colorPrimary"
                android:layout_marginTop="@dimen/small"
                android:layout_marginLeft="@dimen/large"
                android:id="@+id/to"
                android:layout_below="@id/deadline"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@+id/to"
                android:background="@color/colorGray"
                android:layout_marginLeft="@dimen/small"
                android:id="@+id/divider"
                android:layout_marginRight="@dimen/small"
                android:layout_marginTop="@dimen/small"/>

            <TextView
            android:layout_width="wrap_content"
            android:layout_below="@+id/divider"
            android:text="22 Replies"
            android:layout_margin="@dimen/small"
                android:paddingLeft="@dimen/small"
            android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:id="@+id/textView2" />
            <TextView
                android:layout_width="wrap_content"
                android:text="l"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorGray"
                android:layout_alignTop="@+id/textView2"
                android:layout_toRightOf="@+id/textView2"
                android:layout_toEndOf="@+id/textView2"
                android:id="@+id/textView3" />
            <TextView
                android:layout_width="wrap_content"
                android:text="31 Signed in"
                android:layout_marginLeft="@dimen/small"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:layout_alignTop="@+id/textView3"
                android:layout_toRightOf="@+id/textView3"
                android:layout_toEndOf="@+id/textView3" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>